@model Repository.BOOK
@{
    ViewBag.Title = "Edit";
}

<h2>Edit Book</h2>
<div class="form-div">
    @using (Html.BeginForm())
    {
    <div><label class="editLabel">Title:</label> @Html.TextBox("Name", Model.Title)</div>
    <div><label class="editLabel">Pages:</label> @Html.TextBox("Author", Model.pages)</div>
    <div><label class="editLabel">Publication Year:</label> @Html.TextBox("Id", Model.PublicationYear)</div>
    <div><label class="editLabel">Information:</label> @Html.TextArea("Information", Model.publicationinfo)</div>
    <div style="height: 30px;"><input type="submit" value="Save" formmethod="post" class="btn saveBtn" style="float:right;" /></div>
    }
</div>