@model IEnumerable<Service.Models.Book>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>BOOKS</h2>

@if (!Model.Any())
{
    <p>There are no books</p>
}

<div class="search-div">
    @using (Html.BeginForm())
    {
        @Html.TextBox("searchBox")
        <a href="#" class="btn searchBtn">Search</a>
        @*<input type="submit" value="search"/>*@

    }
</div>

<div class="list-group">
    <table>
        <tr class="list-header">
            <td class="list-column">TITLE</td>
            <td class="list-column">AUTHOR</td>

        </tr>
        @foreach (var book in Model)
        {
            <tr onclick="location.href='@Url.Action("Info", "Books", new { id = book.ISBN }, null)'" class="list-item">
                <td class="list-column">
                    @book.Title
                </td>
                <td class="list-column">
                    @book.Title
                </td>

            </tr>
        }

    </table>

</div>
