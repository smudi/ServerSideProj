@model Service.Models.User

@{
    ViewBag.Title = "Register";
}

<h2>Register</h2>
<div class="info-div">
    @using (Html.BeginForm("Register", "Users", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>New user</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div>
                @Html.LabelFor(model => model.UserName)
                <div>
                    @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })
                    <label>@ViewBag.DuplicateMessage</label>
                </div>
            </div>

            <div>
                @Html.LabelFor(model => model.HashPassWord)
                <div>
                    @Html.EditorFor(model => model.HashPassWord, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.HashPassWord, "", new { @class = "text-danger" })
                </div>
            </div>


            <div>
                @Html.LabelFor(model => model.ConfirmPassWord)
                <div>
                    @Html.EditorFor(model => model.ConfirmPassWord, new { htmlAttributes = new { @class = "form-control" } })
                    <label>@ViewBag.ComparePassword</label>
                </div>
            </div>

            <div>
                
                <div>
                    <label>Admin</label>
                    <input name="isAdmin" value="true" id="checkBox" type="checkbox">
                </div>
                <input type="hidden" name="isAdmin" value="false" />
            </div>

            <div>
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn saveBtn" />
                </div>
            </div>
        </div>
    }
    </div>