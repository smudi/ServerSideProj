@model Service.Models.User

@{
    ViewBag.Title = "Register";
}

<h2>Register</h2>
<div class="info-div" style="width: fit-content; text-align: center;">
    @using (Html.BeginForm("Register", "Users", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>New user</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div>
                @Html.LabelFor(model => model.UserName) <br/>
                <div  style="display: inline-flex;">
                    @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })
                    <label>@ViewBag.DuplicateMessage</label>
                </div>
            </div>

            <div>
                @Html.LabelFor(model => model.HashPassWord) <br />
                <div style="display: inline-flex;">
                    @Html.EditorFor(model => model.HashPassWord, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.HashPassWord, "", new { @class = "text-danger" })
                </div>
            </div>


            <div>
                @Html.LabelFor(model => model.ConfirmPassWord) <br />
                <div style="display: inline-flex;">
                    @Html.EditorFor(model => model.ConfirmPassWord, new { htmlAttributes = new { @class = "form-control" } })
                    <label>@ViewBag.ComparePassword</label>
                </div>
            </div>

            <div>
                
                <div>
                    <label>Admin</label> <br />
                    <input name="isAdmin" value="true" id="checkBox" type="checkbox">
                </div>
                <input type="hidden" name="isAdmin" value="false" />
            </div>

            <div>
                <div class="">
                    <input type="submit" value="Create" class="btn saveBtn" />
                </div>
            </div>
        </div>
    }
    </div>