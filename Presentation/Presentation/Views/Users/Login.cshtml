@model Service.Models.User
@{
    ViewBag.Title = "Login";
}

<h2>Log in</h2>
<div class="info-div" style="width: fit-content; text-align: center;">

    @using (Html.BeginForm("Authorize", "Users", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal" >
            <div class="">
                @Html.LabelFor(model => model.UserName, htmlAttributes: new { @class = "" })<br/>
                <div style="display: inline-flex;">
                    @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control", placeholder = "Username" } })
                    @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div >
                @Html.LabelFor(model => model.HashPassWord, htmlAttributes: new { @class = "" })<br />
                <div style="display: inline-flex;">
                    @Html.EditorFor(model => model.HashPassWord, new { htmlAttributes = new { @class = "form-control", placeholder = "Password" } })
                    @Html.ValidationMessageFor(model => model.HashPassWord, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="">
                <div class="">
                    <input type="submit" value="Log in" class="btn saveBtn" />
                </div>
            </div>
            <div class="form-group">
                <div class="">
                    <label class="error-label">@ViewBag.ErrorMessage</label>
                </div>
            </div>
        </div>
    }
    </div>
